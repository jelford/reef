<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.placeholder {
			text-align: center;
			padding: 10px 0;
			margin: 0 15px;
		}
		
		.tree {
			margin: 10px 0;
		}
	</ui:style>	
	
	<g:SplitLayoutPanel height='420px'>
		<g:west size='200'>
			<g:Tree ui:field="tree" addStyleNames="{style.tree}" />
		</g:west>
		<g:center>
			<g:SimplePanel ui:field="placeholder" addStyleNames="{style.placeholder}"/>
		</g:center>
	</g:SplitLayoutPanel>
</ui:UiBinder> 