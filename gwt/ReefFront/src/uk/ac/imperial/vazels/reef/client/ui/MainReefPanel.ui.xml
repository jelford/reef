<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style field="useful" src="useful.css" />
	
	<ui:style>
		.uniformMainMargin {
			margin: 0px 19px 19px;
		}
		
		.greybck {
			background: #e3e3e3;
		}
	</ui:style>
	
	<g:DecoratorPanel>
		<g:VerticalPanel
			addStyleNames="{style.greybck} {style.uniformMainMargin} {useful.greentext}">
			<g:HorizontalPanel addStyleNames="{useful.spaced} {useful.hStretch}">
				<g:Label ui:field="mTitle"
					addStyleNames="{useful.header} {useful.lrSpaced}" />
				<g:cell verticalAlignment="BOTTOM" horizontalAlignment="RIGHT" >
					<g:Anchor href="https://github.com/jelford/reef/wiki"
					addStyleNames="{useful.lrSpaced}"
					target="_blank">
						Need help?
					</g:Anchor>
				</g:cell>
			</g:HorizontalPanel>
			<g:SimplePanel ui:field="mPlaceholder" />
		</g:VerticalPanel>
	</g:DecoratorPanel>
</ui:UiBinder> 