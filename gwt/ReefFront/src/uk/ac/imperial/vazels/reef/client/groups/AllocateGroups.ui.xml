<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:VerticalPanel>

			<g:HorizontalPanel>
				<g:VerticalPanel>
					<g:FlexTable ui:field="groupsFlexTable" cellSpacing="2"
						cellPadding="30" width="400px" addStyleNames="greentext" />


					<g:HorizontalPanel>
						<!-- <g:Label text="Group Name" addStyleNames="{style.spaced}" /> -->
						<g:TextBox ui:field="newGroupTextBox" addStyleNames="textbox" />
						<!-- <g:Label text="Hosts Number" addStyleNames="spaced expel1" 
							/> -->
						<g:IntegerBox ui:field="newHostsTextBox"
							addStyleNames="textbox expel1" />
						<g:Button ui:field="addGroupButton" addStyleNames="expel1"
							text="Add Group" />
					</g:HorizontalPanel>
				</g:VerticalPanel>

			</g:HorizontalPanel>
			
		
			<g:Label ui:field="groupsInfo" addStyleNames="redtxt spaced" />

			<g:cell horizontalAlignment="right">
				<g:HorizontalPanel>
					<g:Button ui:field="btnReset" text="Clear Groups"
						addStyleNames="expel" />
				</g:HorizontalPanel>
			</g:cell>

	</g:VerticalPanel>
</ui:UiBinder> 