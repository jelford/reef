<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style field="useful" src="../ui/useful.css"/>

	<g:VerticalPanel>
		<g:FlexTable ui:field="groupsFlexTable" cellSpacing="2"
			cellPadding="3" addStyleNames="{useful.greentext} {useful.majorComponentWidth}" />

		<g:HorizontalPanel visible="false">
			<g:TextBox ui:field="newGroupTextBox" addStyleNames="{useful.mostlyHStretch} {useful.shortInput}" />
			<g:IntegerBox ui:field="newHostsTextBox" addStyleNames="{useful.mostlyHStretch} {useful.shortInput}" />
			<g:Button ui:field="addGroupButton" text="Add Group" addStyleNames="{useful.noWrap}" />
		</g:HorizontalPanel>
			
		
		<g:Label ui:field="groupsInfo" addStyleNames="{useful.infoText} {useful.spaced}" />

		<g:cell horizontalAlignment="right">
				<g:Button ui:field="btnReset" text="Clear Groups" />
		</g:cell>

	</g:VerticalPanel>
</ui:UiBinder> 