<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.gwt-Button {
			margin: 5;
			padding: 3px 5px;
			text-decoration: none;
			font-size: small;
			cursor: pointer;
			cursor: hand;
			background: url("images/hborder.png") repeat-x 0px -27px;
			border: 1px outset #ccc;
		}
		
		.gwt-Button:active {
			border: 1px inset #ccc;
		}
		
		.gwt-Button:hover {
			border-color: #9cf #69e #69e #7af;
		}
		
		.gwt-Button[disabled] {
			cursor: default;
			color: #888;
		}
		
		.gwt-Button[disabled]:hover {
			border: 1px outset #ccc;
		}
		
		.spaced {
			padding: 0.5em;
		}
		
		.spaced2 {
			padding: 0.2em;
		}
		
		.spaced3 {
			padding: 0em 2em 0em;
		}
		
		.spaced4 {
			padding: 0em 0em 0em;
		}
		
		.hStretch {
			width: 100%;
		}
		
		.expel {
			margin: 0.5em;
		}
		
		.expel1 {
			margin: 0em 0.5em 0em;
		}
		
		.greentext {
			color: #4b6901;
			font-size: 5em;
			font-weight: bold;
<!--			margin: 0px 0px 0px;-->
			text-align: left;
		}
		
		.redtext {
			font-size: 1em;
			color: #a11010;
			text-align: left;
		}
		
		.greybck {
			background: #e3e3e3;
		}
		
		.textBox {
			padding: 2px;
			width: 99px;
		}
		
		.alignleft {
			text-align: left;
		}
		
		.gwt-Button {
			margin: 0;
			padding: 3px 5px;
			text-decoration: none;
			font-size: small;
			cursor: pointer;
			cursor: hand;
			background: url("images/hborder.png") repeat-x 0px -27px;
			border: 1.2px outset #4b6901;
		}
		
		.gwt-Button:active {
			border: 1px inset #ccc;
		}
		
		.gwt-Button:hover {
			border-color: #9cf #69e #69e #7af;
		}
		
		.gwt-Button[disabled] {
			cursor: default;
			color: #888
		}
		
		.gwt-Button[disabled]:hover {
			border: 1px outset #ccc;
		}
	</ui:style>

	<!-- <g:DecoratorPanel addStyleNames="{style.spaced}"> -->

	<g:VerticalPanel>
		<g:HorizontalPanel>
			<g:VerticalPanel>
				<g:FlexTable ui:field="groupsFlexTable" cellSpacing="2"
					cellPadding="30" width="400px" addStyleNames="{style.greentext}" />


				<g:HorizontalPanel>
					<!-- <g:Label text="Group Name" addStyleNames="{style.spaced}" /> -->
					<g:TextBox ui:field="newGroupTextBox" addStyleNames="{style.textBox}" />
					<!-- <g:Label text="Hosts Number" addStyleNames="{style.spaced} {style.expel1}" 
						/> -->
					<g:IntegerBox ui:field="newHostsTextBox"
						addStyleNames="{style.textBox} {style.expel1}" />
					<g:TextBox ui:field="newMappingTextBox" addStyleNames="{style.textBox}" />
					<g:Button ui:field="addGroupButton" addStyleNames="{style.expel1}"
						text="Add Group" />
				</g:HorizontalPanel>
			</g:VerticalPanel>

		</g:HorizontalPanel>
		<g:Label ui:field="groupsInfo" addStyleNames="{style.redtext} {style.spaced}" />

		<g:cell horizontalAlignment="right">
			<g:HorizontalPanel>
				<g:Button ui:field="btnReset" text="Clear Groups"
					addStyleNames="{style.expel}" />
				<!-- <g:Button ui:field="btnNext" text="Next->" addStyleNames="{style.expel}" 
					/> -->
			</g:HorizontalPanel>
		</g:cell>

	</g:VerticalPanel>
	<!-- </g:DecoratorPanel> -->
</ui:UiBinder> 